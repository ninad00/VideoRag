generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Video {
  id          String  @id @default(uuid())
  title       String?
  description String?
  thumbnail   String?
  hls         String?

  // S3
  rawBucket String
  outBucket String

  // status
  status VideoStatus @default(UPLOADED)

  // optional metadata
  duration  Float?
  createdAt DateTime @default(now())
}

enum VideoStatus {
  UPLOADED
  READY
}
